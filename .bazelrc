# TODO: https://pwbug.dev/319665090: Disable hermetic sandbox tmp due to issues
# with arm toolchain.
build --noincompatible_sandbox_hermetic_tmp

# Get non-BCR Bazel modules.
common --registry=https://raw.githubusercontent.com/armandomontanez/bazel-registry/main/

# Re-add BCR since specifying a registry disables the BCR.
common --registry=https://bcr.bazel.build

common --verbose_failures

# Required for new toolchain resolution API.
build --incompatible_enable_cc_toolchain_resolution

build --platforms=@pico-sdk//bazel/platform:rp2040
